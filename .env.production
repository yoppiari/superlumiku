# Database (PostgreSQL untuk production)
# IMPORTANT: Ganti password ini di Coolify\!
DATABASE_URL=postgresql://lumiku_user:CHANGE_THIS_PASSWORD@postgres:5432/lumiku_production?schema=public
POSTGRES_HOST=postgres
POSTGRES_USER=lumiku_user
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD
POSTGRES_DB=lumiku_production

# Server
PORT=3000
NODE_ENV=production

# JWT
# IMPORTANT: Generate dengan: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_JWT_SECRET_MIN_32_CHARS
JWT_EXPIRES_IN=7d

# Payment Gateway (Duitku) - Production
# IMPORTANT: Ganti dengan credentials production Duitku\!
DUITKU_MERCHANT_CODE=YOUR_PRODUCTION_MERCHANT_CODE
DUITKU_API_KEY=YOUR_PRODUCTION_API_KEY
DUITKU_ENV=production
DUITKU_CALLBACK_URL=https://app.lumiku.com/api/mainapp/payment/callback
DUITKU_RETURN_URL=https://app.lumiku.com

# AI Services
# IMPORTANT: Ganti dengan API keys production Anda\!
ANTHROPIC_API_KEY=your-production-anthropic-api-key
HUGGINGFACE_API_KEY=your-production-huggingface-api-key

# AI Models
FLUX_MODEL=black-forest-labs/FLUX.1-dev
FLUX_LORA_MODEL=XLabs-AI/flux-RealismLora
SDXL_MODEL=stabilityai/stable-diffusion-xl-base-1.0

# File Storage
UPLOAD_PATH=./uploads
OUTPUT_PATH=./outputs
MAX_FILE_SIZE=524288000

# FFmpeg
FFMPEG_PATH=ffmpeg
FFPROBE_PATH=ffprobe

# CORS
CORS_ORIGIN=https://app.lumiku.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redis (for Background Queue)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Storage Directories
UPLOAD_DIR=./uploads
OUTPUT_DIR=./uploads/outputs
