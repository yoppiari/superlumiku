# ============================================
# LUMIKU PRODUCTION ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env.production and fill in your values

# ============================================
# DATABASE (PostgreSQL)
# ============================================
DATABASE_URL="postgresql://username:password@postgres:5432/lumiku_production?schema=public"
POSTGRES_USER="lumiku_user"
POSTGRES_PASSWORD="CHANGE_THIS_SECURE_PASSWORD"
POSTGRES_DB="lumiku_production"
POSTGRES_HOST="postgres"

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3000
NODE_ENV=production

# ============================================
# JWT AUTHENTICATION
# ============================================
# IMPORTANT: Generate a secure random string (min 32 characters)
# Example: openssl rand -base64 32
JWT_SECRET="CHANGE_THIS_TO_SECURE_RANDOM_STRING_MIN_32_CHARS"
JWT_EXPIRES_IN="7d"

# ============================================
# REDIS CONFIGURATION (Required for job queue)
# ============================================
REDIS_HOST="redis"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# For external Redis (Upstash, Redis Cloud, etc.):
# REDIS_HOST="your-redis-instance.upstash.io"
# REDIS_PORT="6379"
# REDIS_PASSWORD="your-redis-password"

# ============================================
# FILE STORAGE
# ============================================
UPLOAD_PATH="./uploads"
OUTPUT_PATH="./outputs"
MAX_FILE_SIZE=524288000

# ============================================
# FFMPEG PATHS
# ============================================
FFMPEG_PATH="ffmpeg"
FFPROBE_PATH="ffprobe"

# ============================================
# CORS
# ============================================
# Your production domain
CORS_ORIGIN="https://cf.avolut.com"

# ============================================
# PAYMENT GATEWAY (Duitku)
# ============================================
DUITKU_MERCHANT_CODE="your-merchant-code"
DUITKU_API_KEY="your-api-key"
DUITKU_ENV="production"
DUITKU_CALLBACK_URL="https://cf.avolut.com/api/payments/callback"
DUITKU_RETURN_URL="https://cf.avolut.com/payments/status"

# ============================================
# AI SERVICES (Optional)
# ============================================
ANTHROPIC_API_KEY="your-anthropic-api-key-if-needed"

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# MONITORING & LOGGING (Optional)
# ============================================
# LOG_LEVEL="info"
# SENTRY_DSN="your-sentry-dsn"
